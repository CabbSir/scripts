# coding = utf-8
import os

import open3d as o3d


# 注意以下路径中需要在最后添加 "\\" 符号，例如 C:\\source\\
source_path = ""  # 需要转换成 pcd 格式的文件夹
target_path = ""  # pcd 文件输出的文件夹

for file in os.listdir(source_path):
    if ".ply" not in file:
        continue
    print("正在转换 " + file)
    ply_file = o3d.io.read_point_cloud(source_path + file)
    o3d.io.write_point_cloud(file[:-4] + ".pcd", ply_file)
